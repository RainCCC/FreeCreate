<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="200px"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:textColor="#C17287"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/npx30"
            android:gravity="center"
            android:text="ME"
            android:textSize="@dimen/nsp20" />
    </LinearLayout>

    <View style="@style/Cut_off_line" />

    <com.fc.rain.freecreate.utils.MyCircleImageView
        android:id="@+id/iv_user"
        android:layout_width="@dimen/npx180"
        android:layout_height="@dimen/npx180"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/npx30"
        android:src="@drawable/ic_my" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/tv_1e1e1e_16sp"
        android:layout_below="@id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/nsp20"
        android:layout_marginTop="@dimen/npx20"
        android:text="Rain"
        android:textSize="@dimen/nsp20"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ll_edit"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/npx30"
            android:layout_marginRight="@dimen/npx30"
            android:layout_marginTop="@dimen/npx30"
            android:background="@drawable/bg_fafafa_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:drawableLeft="@drawable/setting"
                android:drawablePadding="@dimen/npx15"
                style="@style/tv_1e1e1e_200_16sp"
                android:layout_weight="1"
                android:text="我的设置" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_edit"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/npx30"
            android:layout_marginRight="@dimen/npx30"
            android:layout_marginTop="@dimen/npx30"
            android:background="@drawable/bg_fafafa_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:drawableLeft="@drawable/setting"
                android:drawablePadding="@dimen/npx15"
                style="@style/tv_1e1e1e_200_16sp"
                android:layout_weight="1"
                android:text="版本号" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_edit"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/npx30"
            android:layout_marginRight="@dimen/npx30"
            android:layout_marginTop="@dimen/npx30"
            android:background="@drawable/bg_fafafa_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:drawableLeft="@drawable/setting"
                android:drawablePadding="@dimen/npx15"
                style="@style/tv_1e1e1e_200_16sp"
                android:layout_weight="1"
                android:text="添加好友" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_exit"
            style="@style/ll_edit"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/npx30"
            android:layout_marginRight="@dimen/npx30"
            android:layout_marginTop="@dimen/npx30"
            android:background="@drawable/bg_fafafa_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:drawableLeft="@drawable/delete"
                android:drawablePadding="@dimen/npx15"
                style="@style/tv_1e1e1e_200_16sp"
                android:layout_weight="1"
                android:text="退出当前帐号" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>